{
  "name": "latex-graphics-helper",
  "displayName": "LaTeX Graphics Helper",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "latex-graphics-helper.cropPdf",
          "group": "latex-graphics-helper",
          "when": "resourceExtname == .pdf"
        },
        {
          "command": "latex-graphics-helper.drawioToPdf",
          "group": "latex-graphics-helper",
          "when": "resourceExtname == .drawio || resourceExtname == .dio"
        },
        {
          "submenu": "latex-graphics-helper.pdfTo",
          "group": "latex-graphics-helper",
          "when": "resourceExtname == .pdf"
        }
      ],
      "latex-graphics-helper.pdfTo": [
        {
          "command": "latex-graphics-helper.pdfToPng",
          "group": "latex-graphics-helper",
          "when": "resourceExtname == .pdf"
        },
        {
          "command": "latex-graphics-helper.pdfToJpeg",
          "group": "latex-graphics-helper",
          "when": "resourceExtname == .pdf"
        },
        {
          "command": "latex-graphics-helper.pdfToSvg",
          "group": "latex-graphics-helper",
          "when": "resourceExtname == .pdf"
        }
      ]
    },
    "submenus": [
      {
        "id": "latex-graphics-helper.pdfTo",
        "label": "%pdfTo%"
      }
    ],
    "commands": [
      {
        "command": "latex-graphics-helper.cropPdf",
        "title": "%cropPdf%",
        "category": "LaTeX Graphics Helper"
      },
      {
        "command": "latex-graphics-helper.drawioToPdf",
        "title": "%drawioToPdf%",
        "category": "LaTeX Graphics Helper"
      },
      {
        "command": "latex-graphics-helper.pdfToPng",
        "title": "%pdfToPng%",
        "category": "LaTeX Graphics Helper"
      },
      {
        "command": "latex-graphics-helper.pdfToJpeg",
        "title": "%pdfToJpeg%",
        "category": "LaTeX Graphics Helper"
      },
      {
        "command": "latex-graphics-helper.pdfToSvg",
        "title": "%pdfToSvg%",
        "category": "LaTeX Graphics Helper"
      }
    ],
    "configuration": {
      "title": "LaTeX Graphics Helper",
      "properties": {
        "latex-graphics-helper.shell": {
          "type": "string",
          "default": "",
          "description": "Shell to use for executing commands. If not specified, the default shell for your operating system will be used (powershell.exe on Windows, /bin/zsh on macOS, /bin/bash on others)."
        },
        "latex-graphics-helper.pdfcropCommand": {
          "type": "string",
          "default": "pdfcrop",
          "description": "Path to the pdfcrop executable"
        },
        "latex-graphics-helper.pdfcropOutputPath": {
          "type": "string",
          "default": "${folderName}/${fileName}-crop.pdf",
          "description": "Output file name when cropping a pdf file."
        },
        "latex-graphics-helper.drawioCommand": {
          "type": "string",
          "default": "",
          "description": "Path to the drawio executable. If not specified, the default path for your operating system will be used (\"C:\\Program Files\\draw.io\\draw.io.exe\" on Windows, /Applications/draw.io.app/Contents/MacOS/draw.io on macOS, drawio on others)."
        },
        "latex-graphics-helper.drawioToPdfOutputPath": {
          "type": "string",
          "default": "${folderName}/${fileName}/${tabName}.pdf",
          "description": "Output file name when converting a PDF file."
        },
        "latex-graphics-helper.placementSpecifiers.useDefault": {
          "type": "boolean",
          "default": false,
          "description": "Whether to use the default placement specifiers for LaTeX figures and tables."
        },
        "latex-graphics-helper.placementSpecifiers.default": {
          "type": "string",
          "default": "[H]",
          "description": "Default placement specifiers for LaTeX figures and tables."
        },
        "latex-graphics-helper.placementSpecifiers.choice": {
          "type": "array",
          "default": [
            "[H]",
            "[h]",
            "[t]",
            "[b]",
            "[p]",
            "[ht]",
            "[hb]",
            "[hp]",
            "[tb]",
            "[tp]",
            "[bp]",
            "[htb]",
            "[htp]",
            "[hbp]",
            "[tbp]",
            "[htbp]"
          ],
          "description": "Available placement specifiers for LaTeX figures and tables."
        },
        "latex-graphics-helper.graphicsOptions.default": {
          "type": "string",
          "default": "[width=0.8\\linewidth]",
          "description": "Default graphics options for LaTeX figures and tables."
        },
        "latex-graphics-helper.minipageOptions.useDefault": {
          "type": "boolean",
          "default": false,
          "description": "Whether to use the default options for LaTeX minipage environments."
        },
        "latex-graphics-helper.minipageOptions.default": {
          "type": "string",
          "default": "[b]",
          "description": "Default options for LaTeX minipage environments."
        },
        "latex-graphics-helper.minipageOptions.choice": {
          "type": "array",
          "default": [
            "[t]",
            "[c]",
            "[b]"
          ],
          "description": "Available options for LaTeX minipage environments."
        },
        "latex-graphics-helper.pdftocairoCommand": {
          "type": "string",
          "default": "pdftocairo",
          "description": "Path to the pdftocairo executable"
        },
        "latex-graphics-helper.pdfToPngOutputPath": {
          "type": "string",
          "default": "${folderName}/${fileName}",
          "description": "Output file name when converting a PDF file to PNG. Depends on pdftocairo. The file extension is added automatically."
        },
        "latex-graphics-helper.pdfToJpegOutputPath": {
          "type": "string",
          "default": "${folderName}/${fileName}",
          "description": "Output file name when converting a PDF file to JPEG. Depends on pdftocairo. The file extension is added automatically."
        },
        "latex-graphics-helper.pdfToSvgOutputPath": {
          "type": "string",
          "default": "${folderName}/${fileName}.svg",
          "description": "Output file name when converting a PDF file to SVG. Depends on pdftocairo."
        },
        "latex-graphics-helper.pdfToPngOptions": {
          "type": "array",
          "default": [
            "-png",
            "-transp"
          ],
          "description": "Options passed to pdftocairo when converting PDF to PNG."
        },
        "latex-graphics-helper.pdfToJpegOptions": {
          "type": "array",
          "default": [
            "-jpeg"
          ],
          "description": "Options passed to pdftocairo when converting PDF to JPEG."
        },
        "latex-graphics-helper.pdfToSvgOptions": {
          "type": "array",
          "default": [
            "-svg"
          ],
          "description": "Options passed to pdftocairo when converting PDF to SVG."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "xml2js": "^0.6.2"
  }
}
